<body>
<button id="btn" onclick="clicou()"> Clica aqui </button>
<section id="res">
        <p>Espere...</p>
    </section> 
<script>
        
        function clicou() {
           let nome = window.prompt('Qual é o seu nome?');
           let res= window.document.getElementById('res');
           window.alert(`Olá, ${nome}! Seja bem vindo!`);
           res.innerHTML=  `<p> Olá, ${nome}! é um prazer enorme conhecer-te!`;
        }
    </script>
